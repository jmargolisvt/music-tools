extends ../layout

block content
	h1.
		Song ID #{song._id}
	form(action='/songs/#{song._id}/edit',method='post',name='updatesong',enctype='application/x-www-form-urlencoded')
		p Name:
			input#inputName(type='text', value='#{song.name}', name='name')
		p Badge:
			input#inputBadge(type='number', value='#{song.badge}', name='badge')
		p DOB:
			input#inputDob(type='date', value='#{songdob}', name='dob')
		p Are you Loved?:
			input#inputIsLoved(type='checkbox', name='isloved', checked=('#{song.isloved}'==='true' ? "checked" : undefined))
		p
			input(type='hidden',value='PUT',name='_method')
		p
			button#btnSubmit(type='submit').
				Update